<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/laout_lost">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp">
    <TextView
        android:id="@+id/tv_lost_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编号：111" />

    <TextView
        android:id="@+id/tv_lost_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称：111" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_lost_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丢失地点：11111" />

        <TextView
            android:id="@+id/tv_lost_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丢失时间：111111" />

        <TextView
            android:id="@+id/tv_lost_get_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失主电话：12345678901" />

        <TextView
            android:id="@+id/tv_lost_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品状态" />
    </LinearLayout>
</LinearLayout>